import React from "react"

interface ButtonProps extends React.ButtonHTMLAttributes<HTMLButtonElement> {
  children: React.ReactNode
  variant?: "primary" | "secondary" | "success" | "warning" | "danger" | "info" | "light" | "ghost"
  size?: "sm" | "md" | "lg"
  loading?: boolean
  fullWidth?: boolean
  icon?: React.ReactNode
}

const variantClasses = {
  primary: "bg-[var(--kt-primary)] hover:bg-[var(--kt-primary-dark)] text-white border-transparent",
  secondary: "bg-[var(--kt-gray-200)] hover:bg-[var(--kt-gray-300)] text-[var(--kt-text-dark)] border-transparent",
  success: "bg-[var(--kt-success)] hover:bg-green-600 text-white border-transparent",
  warning: "bg-[var(--kt-warning)] hover:bg-yellow-500 text-[var(--kt-text-dark)] border-transparent",
  danger: "bg-[var(--kt-danger)] hover:bg-red-600 text-white border-transparent",
  info: "bg-[var(--kt-info)] hover:bg-purple-700 text-white border-transparent",
  light: "bg-white hover:bg-gray-50 text-[var(--kt-text-dark)] border-gray-300",
  ghost: "bg-transparent hover:bg-gray-100 text-[var(--kt-text-dark)] border-transparent",
}

const sizeClasses = {
  sm: "px-3 py-1.5 text-xs",
  md: "px-4 py-2 text-sm",
  lg: "px-6 py-3 text-base",
}

export default function Button({
  children,
  variant = "primary",
  size = "md",
  loading = false,
  fullWidth = false,
  icon,
  disabled,
  className = "",
  ...props
}: ButtonProps) {
  return (
    <button
      disabled={disabled || loading}
      className={`
        inline-flex items-center justify-center gap-2
        font-medium rounded-md border
        transition-all duration-200
        focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--kt-primary)]
        disabled:opacity-50 disabled:cursor-not-allowed
        ${variantClasses[variant]}
        ${sizeClasses[size]}
        ${fullWidth ? "w-full" : ""}
        ${className}
      `}
      {...props}
    >
      {loading ? (
        <>
          <svg
            className="animate-spin h-4 w-4"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              className="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              strokeWidth="4"
            ></circle>
            <path
              className="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
          Procesando...
        </>
      ) : (
        <>
          {icon && <span className="flex-shrink-0">{icon}</span>}
          {children}
        </>
      )}
    </button>
  )
}
