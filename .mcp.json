        "mcp"
      ]
    },
    "pdf": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-pdf",
        "serve"
      ]
    },
    "xlsx": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-xlsx",
        "serve"
      ]
    },
    "ms-office-suite": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-ms-office-suite",
        "serve"
      ]
    },
    "web-reader": {
      "command": "npx",
      "args": [
        "@mcp/web-reader",
        "serve"
      ]
    },
    "ide": {
      "command": "npx",
      "args": [
        "@mcp/ide",
        "serve"
